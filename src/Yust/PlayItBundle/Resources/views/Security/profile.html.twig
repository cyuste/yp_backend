{% extends '@YustPlayIt/Client/base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-8">
         {{ form_start(form,{'attr': {'id':'myForm','class':'form-horizontal'} }) }}      
          <div class="form-group">                   
              {{ form_label(form.username, 'Usuario', {'label_attr': {'class':'col-sm-3 control-label'} }) }}
              
              <div class="col-sm-5">
                  {{ form_widget(form.username,{'attr': {'class':'form-control', 'readonly':'true'} }) }}
              </div>    
          </div>
          <div class="form-group">                   
              {{ form_label(form.email, 'Email', {'label_attr': {'class':'col-sm-3 control-label'} }) }}
              <div class="col-sm-5">
                  {{ form_widget(form.email,{'attr': {'class':'form-control'} }) }}
              </div>   
              {{ form_errors(form.email) }}
          </div>
          <div class="form-group">                   
              {{ form_label(form.plainPassword, 'Contraseña', {'label_attr': {'class':'col-sm-3 control-label'} }) }}
              <div class="col-sm-5">
                  {{ form_widget(form.plainPassword,{'attr': {'class':'form-control'} }) }}
                  <a class="btn btn-default" href={{ path('changePassword_route')}} role="button">Cambiar contraseña</a>
              </div> 
              {{ form_errors(form.plainPassword) }}
          </div>
          <div class="col-sm-8">
              <div class="col-sm-3"></div>
              <div class="col-sm-5">
                  {{ form_widget(form.submit,{'label': 'Guardar cambios', 'attr': {'class':'btn btn-primary'}}) }}
                  {{ form_end(form) }} 
              </div>
          </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <script>
        $(document).ready(function(){
            $("#overview").removeClass('active');
            $("#profile").addClass('active');        
        });
    </script>
{% endblock %}
