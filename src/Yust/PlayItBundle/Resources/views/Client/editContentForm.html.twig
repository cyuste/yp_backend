{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" 
aria-labelledby="editModalLabel" aria-hidden="true">
    {{ form_start(form,{'attr': {'id':'myForm'} }) }}
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h3 class="modal-title" id="myModalLabel">Actualizar contenido</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <div class="preview">
                            <img class="img-thumbnail" src="{{ asset(thumbnail) }}" alt="Thumbnail"/>
                        </div>               
                        {{ form_row(form.content.name, {'label':'Nombre'}) }}
                        {{ form_row(form.content.length, {'label':'Duraci√≥n'}) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer"> 
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                {{ form_widget(form.submit,{'label': 'Guardar', 'attr': {'class':'btn btn-primary'}}) }}
            </div>
          </div>
        </div>
    {{ form_end(form) }}
</div>
