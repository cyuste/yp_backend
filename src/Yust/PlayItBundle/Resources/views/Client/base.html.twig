<!DOCTYPE html>
<html>
    <head>
    {% block head %}  
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
            {% stylesheets '@bootstrap_css' '@YustPlayItBundle/Resources/public/css/yustplayit.css' %}
                <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
            {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@jquery' '@jqueryui' '@bootstrap_js' '@underscore'
                    '@form' '@YustPlayItBundle/Resources/public/js/*' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
	<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	<script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
    </head>
    
    <body>
        {% block body %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                  <!-- Brand and toggle get grouped for better mobile display -->
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Yustplayit</a>
                  </div>

                  <!-- Collect the nav links, forms, and other content for toggling -->
                  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                      <ul class="nav navbar-nav">
                        <li class="active" id="overview"><a href="{{ path('homepage') }}">Programación <span class="sr-only">(current)</span></a></li>
                        <li id="admin"><a href="{{ path('groups_route', {'userId' : app.user.id}) }}">Administración</a></li>
                        <li id="profile"><a href="{{ path('profile_route') }}">Mi Perfil</a></li>       
                      </ul>
                      <p class="navbar-text navbar-right">
                          Hola {{ app.user.username }}
                          <a href="{{ path('homepage') }}logout" class="navbar-link">
                              (Desconectar)
                          </a>
                      </p>     
                  </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        {% endblock %} 
    </body>
</html>
